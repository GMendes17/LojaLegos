@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar na LojaLegos";
}

<div style="width:75% ; margin: auto; margin-top:40px;">
<h1 style="width:75% ; margin: auto;text-align:center;">@ViewData["Title"]</h1>
<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <input asp-for="Input.Cliente.Email" value="a@a.aa" type="hidden" />

    <div class="row">
        <div class="col-md-12">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-floating mb-3">
                    <input asp-for="Input.Cliente.PrimeiroNome" class="form-control" aria-required="true" placeholder="Nome" />
                <label asp-for="Input.Cliente.PrimeiroNome">Nome Próprio</label>
                <span asp-validation-for="Input.Cliente.PrimeiroNome" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                    <input asp-for="Input.Cliente.Apelido" class="form-control" aria-required="true" placeholder="Apelido" />
                <label asp-for="Input.Cliente.Apelido">Apelido</label>
                <span asp-validation-for="Input.Cliente.Apelido" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                    <input asp-for="Input.Cliente.Morada" class="form-control" aria-required="true" placeholder="Morada" />
                <label asp-for="Input.Cliente.Morada">Morada</label>
                <span asp-validation-for="Input.Cliente.Morada" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                    <input asp-for="Input.Cliente.CodPostal" class="form-control" aria-required="true" placeholder="Código Posta" />
                <label asp-for="Input.Cliente.CodPostal">Código Postal</label>
                <span asp-validation-for="Input.Cliente.CodPostal" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                    <input asp-for="Input.Cliente.NrTelemovel" class="form-control" aria-required="true" placeholder="Número de Telemóvel" />
                <label asp-for="Input.Cliente.NrTelemovel">Número de Telemóvel</label>
                <span asp-validation-for="Input.Cliente.NrTelemovel" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                    <input asp-for="Input.Cliente.Cidade" class="form-control" aria-required="true" placeholder="Cidade" />
                <label asp-for="Input.Cliente.Cidade">Cidade</label>
                <span asp-validation-for="Input.Cliente.Cidade" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                    <input asp-for="Input.Cliente.País" class="form-control" aria-required="true" placeholder="País" />
                <label asp-for="Input.Cliente.País">País</label>
                <span asp-validation-for="Input.Cliente.País" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                    <input asp-for="Input.Cliente.NrContribuinte" class="form-control" aria-required="true" placeholder="Número de Contribuinte">
                <label asp-for="Input.Cliente.NrContribuinte">Número de Contribuinte</label>
                <span asp-validation-for="Input.Cliente.NrContribuinte" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row" style="width:50%; margin:auto;">
        <div class="col-md-12">
            <hr />
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color:rgb(253, 128, 36);">Registar</button>
        </div>
    </div>
</form>

</div>



