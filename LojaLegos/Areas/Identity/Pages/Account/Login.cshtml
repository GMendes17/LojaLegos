@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="row" style="justify-content: center;height: 80vh;">
    <div class="col-md-6" style="align-self: center;float:left;">
        <section>
            <form id="account" method="post">
                <h2>Entra na tua conta LegoMania!</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <p></p>
                <div>
                    <div class="checkbox">
                      
                        <a id="forgot-password" asp-page="./ForgotPassword">Esqueceste-te da palavra-passe?</a>
                        
                        <label asp-for="Input.RememberMe" class="form-label" style="float:right">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Guardar sessão
                        </label>
                    </div>
                </div>
                <p></p>
                <div>
                    <p>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar sessão</button>
                    </p>
                </div>
                <div>
                    
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Ainda não tens conta? Regista-te agora!</a>
                    </p>
                   
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
