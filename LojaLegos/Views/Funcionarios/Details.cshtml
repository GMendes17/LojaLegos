@model LojaLegos.Models.Funcs

@{
    ViewData["Title"] = "Details";
}
<div style="width : 80% ; margin:auto; margin-top:40px;">   
<h3>Detalhes dos Funcionário</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            N.º de Telemóvel:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NrTelemovel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cargo):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cargo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gestor):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gestor.Nome)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>
</div>
