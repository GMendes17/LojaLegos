@model LojaLegos.Models.Encomenda

@{
    ViewData["Title"] = "Create";
    var precoTotal = TempData["precoTotal"];
    var teste = TempData["ArtigosQuantidades"];

}

<h1>Create</h1>

<h4>Encomenda</h4>
