@model LojaLegos.Models.Armazem

@{
    ViewData["Title"] = "Details";
}


<div style="width:80%; margin: auto; margin-top:40px;">
    <div>
        <h3>Armazém N.º @Html.DisplayFor(model => model.Id)</h3>

        <h4>Local: @Html.DisplayFor(model => model.Local)</h4>
           
        <h4>Responsável: @Html.DisplayFor(model => model.Responsavel.Nome)</h4>
        <br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    <h4>ID</h4>
                </th>
                <th>
                    <h4>Produto</h4>
                </th>
                <th>
                    <h4>Stock</h4>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Artigos) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>    
                     <a href = "~/Artigos/Edit/@item.Id ">Editar</a> 
                </td>
           </tr>   
    } 
         </tbody>
    </table>
         <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
         <a asp-action="Index">Voltar</a>

    </div>
</div>
 