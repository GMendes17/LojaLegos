@model IEnumerable<LojaLegos.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}
<div style="width: 80%; margin: auto; margin-top: 40px;">
<h1>Lista de Clientes</h1>
    <br />
<table class="table">
    <thead>
        <tr>
            <th>
                Primeiro Nome
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apelido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Morada)
            </th>
            <th>
                Código Postal
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.País)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                N.º de Telemóvel
            </th>
            <th>
                N.º de Contribuinte
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrimeiroNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apelido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Morada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodPostal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.País)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrTelemovel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrContribuinte)
            </td>
            <td>
                @if (User.IsInRole("Gestor")) {
                 <text>
                 <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                 </text>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
</div>