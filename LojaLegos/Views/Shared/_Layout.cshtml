@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LegoMania</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LojaLegos.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3" style="margin: 0px !important;background-color:#fddd01; ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LegoMania</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Artigos" asp-action="Index">Artigos</a>
                        </li>

                        @if (User.IsInRole("Gestor") || User.IsInRole("Funcionario"))
                        {

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Armazem" asp-action="Index">Armazém</a>
                            </li>
                        }
                        @if (User.IsInRole("Gestor") || User.IsInRole("Funcionario"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                            </li>
                        }
                        @if (User.IsInRole("Gestor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Gestores" asp-action="Index">Gestores</a>
                            </li>
                        }
                        @if (User.IsInRole("Gestor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Funcionarios" asp-action="Index">Funcionários</a>
                            </li>
                        }
                            <li class="nav-item me-auto" >
                                <a class="nav-link text-dark" style="float:right;" asp-area="" asp-controller="Artigos" asp-action="CarrinhoCompras"><img style="align;padding-bottom:4px;" src="~/Imagens/shopping-cart.png"></a>
                            </li>
                       
                       
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
        <main role="main" class="pb-3" style="width:100% ! important; " >
            @RenderBody()
        </main>

    <footer class="border-top footer " style="width:100% ! important;background-color: rgb(0, 89, 183);color:white;text-align:center;margin: 0px; padding:0px; margin-top: 200px; ">
        
            &copy; 2022 - LegoMania - Realizado por Gonçalo Mendes e Pedro Gaspar - Licenciatura Engenharia Informática - Desenvolvimento Web 
       
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
